<body>

  {{>memberNav}}

  <div class='container' style='margin-top:60px'>
    <h1 style='text-align:center'>Welcome <span style='color: #017bcd;'>{{userInSession.username}}</span></h1>
  </div>

  <section style="width: 100%;height: auto;margin-top: 80px;">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="headline text-center">ArtigosÂ </h1>
      </div>
    </div>
    <div class="row d-flex flex-row flex-wrap" style='margin-left: 5%; margin-right:5%'>
      {{#each articles}}
      <div class="col-sm-6 col-md-4 col-lg-4">
        <div class="card article-card" style='height:300px; max-height:300px; margin-top: 30px'>
          <img src='{{imgPath}}' class="card-img-top w-100 d-block" style='width:auto; height: 150px' />
          <div class="card-body d-flex flex-column align-items-center">
            <h4 class="card-title">{{this.title}}</h4>
            <h6 class="card-text"> Autor: {{this.author.username}}</h6>
            <a href="/private/main/{{this._id}}"><button class="btn btn-primary" type="button">Mais
                Detalhes</button></a>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </section>




</body>

